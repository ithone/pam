	while(i<valeur.length){ 
 		val.push( (valeur[i+2]?valeur[i+2]:'') + (valeur[i+1]?valeur[i+1]:'') + valeur[i] );
 		i=i+3;
	} 
	val=val.reverse().join(' ') +( tempval[1]?tempval[1].length>0?'.'+tempval[1]:'':'');
	document.write(val + " {{ 'EUR' | trans }}")
}
